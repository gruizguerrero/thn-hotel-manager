<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Context\Hotel\Domain\Write\Aggregate\Hotel" table="hotels">
        <id name="id" column="id" type="uuid" />
        <field name="name" column="name" type="name" length="255" />
        <field name="city" column="city" type="city" length="255" />
        <field name="country" column="country" type="country" length="2" />
        <!--<field name="numberOfRooms" column="number_of_rooms" type="integer" />-->
        <field name="createdAt" column="created_at" type="datetime_immutable" />
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="true" />

        <many-to-many field="rooms" target-entity="App\Context\Hotel\Domain\Write\Entity\HotelRoom" fetch="EAGER">
            <join-table name="hotel_rooms_assignment">
                <join-columns>
                    <join-column name="hotel_id" referenced-column-name="id" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="room_id" referenced-column-name="id" />
                </inverse-join-columns>
            </join-table>
            <cascade>
                <cascade-persist/>
            </cascade>
        </many-to-many>
    </entity>
</doctrine-mapping>
